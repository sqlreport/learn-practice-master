{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Flask Backend",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/backend/run.py",
            "env": {
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1",
                "DATABASE_URL": "postgresql://myapp_user:myapp_password@localhost:5432/myapp_db",
                "SECRET_KEY": "dev-secret-key",
                "JWT_SECRET_KEY": "dev-jwt-secret-key"
            },
            "args": [],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "justMyCode": true,
            "preLaunchTask": "Start Database"
        },
        {
            "name": "Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/",
                "-v"
            ],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "FLASK_ENV": "testing",
                "DATABASE_URL": "sqlite:///:memory:"
            }
        }
    ]
}